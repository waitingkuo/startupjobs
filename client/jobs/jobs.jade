template(name="jobList")
  #job-list
    h2 職缺
    .row-fluid
      .container-fluid
        .jobs
          each jobs
            +jobListItem
            
template(name="jobDetail")
  .row-fluid
    .container-fluid
      +quickForm collection="Jobs" doc=job type="readonly" id="job-detail"

template(name="submitJob")
  .row-fluid
    .container-fluid
      +quickForm collection="Jobs" type="insert" id="submit-job"

template(name="updateJob")
  .row-fluid
    .container-fluid
      +quickForm collection="Jobs" doc=job type="update" id="update-job"

template(name="jobListItem")
  a(href="{{pathFor 'jobDetail'}}")
    .job
      .row
        .col-xs-9
          p 
            span {{jobTitle}} 
            span {{company}}
          p 
            span 0 point
        .col-xs-3
          span {{salaryLowerBound}} ~ {{salaryUpperBound}}
          a.pull-right.btn.btn-info(href="{{pathFor 'updateJob'}}") 編輯
