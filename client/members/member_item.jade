template(name="memberItem")
  div.item.well.col-md-3 
    div
        img.center-block(src="https://fbcdn-profile-a.akamaihd.net/hprofile-ak-xpa1/t1.0-1/p160x160/10492015_10152222991986398_6206302864784815541_n.jpg",class="img-circle")
    div
        div.center-block
            if category
                p 類別：#{category}
            if salary
                p 薪資：#{salary}
            if gender
                p 性別：#{gender}
            if website
                a(href='#{website}') 個人網站
            if location
                p #{location}
            if skills
                p 技能：
                ul
                    each skills
                        li #{this}
            if summary
                p 自我介紹
                p #{summary}


